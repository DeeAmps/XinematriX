@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/css/login.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
</head>
<body>
    <div class="wrapper fadeInDown">
        <div id="formContent">
            <!-- Tabs Titles -->
            <br>
            <!-- Icon -->
            <div class="fadeIn first">
                <img src="~/images/danny.png" id="icon" alt="User Icon" />
            </div>
            @if (ViewData["ValidateCred"] != null)
            {
                <div class="alert alert-danger alert-dismissable" style="margin: 0 60px 0 60px">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                    <strong>@ViewData["ValidateCred"]</strong>
                </div>
            }
            <!-- Login Form -->
            <form method="post" asp-action="Login">
                <input type="text" id="login" class="fadeIn second" name="username" placeholder="login" required>
                <input type="password" id="password" class="fadeIn third" name="password" placeholder="password" required>
                <input type="submit" class="fadeIn fourth" value="Log In">
            </form>

        </div>
    </div>
</body>
</html>
