
@{
    ViewData["Title"] = "Profile";
    ViewData["PageHeading"] = "Change Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form action="/" method="post">
    <div>
        <div class="row">
            <div class="col-md-3"> <strong>Old Password:</strong></div>
            <div class="col-md-5">
                <input class="password" type="password" name="oldpassword" required/>
            </div>
        </div>
        <br /><br />
        <div class="row">
            <br />
            <div class="col-md-3"> <strong>New Password:</strong></div>
            <div class="col-md-5">
                <input class="password" type="password" name="newpassword" required/>
            </div>
        </div>
        <br /><br />
        <div class="row">
            <br />
            <div class="col-md-3"> <strong>Confirm Password:</strong></div>
            <div class="col-md-5">
                <input class="password" type="password" name="confirmpassword" required/>
            </div>
        </div>
    </div>
    <br/><hr/>
    <div class="row">
        <button type="submit" class="btn btn-primary btn-rounded">SUBMIT</button>
    </div>
</form>

@section Scripts{ 
    <script>
        $(function () {
            $(".password").width('70%').kendoMaskedTextBox();
        });
    </script>
    
}

