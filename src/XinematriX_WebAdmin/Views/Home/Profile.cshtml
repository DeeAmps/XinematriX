
@{
    ViewData["Title"] = "Profile";
    ViewData["PageHeading"] = "Change Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="Profile" method="post">
    <div>
        @if (ViewData["Error"] != null)
         {
            <div class="alert alert-danger alert-dismissable">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                <strong>@ViewData["Error"]</strong>
            </div>
         }
        @if (ViewData["Success"] != null)
         {
            <div class="alert alert-success alert-dismissable">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                <strong>@ViewData["Success"]</strong>
            </div>
         }
        <div class="row">
            <div class="col-md-3"> <strong>Old Password:</strong></div>
            <div class="col-md-5">
                <input class="password" type="password" name="oldpassword" required/>
            </div>
        </div>
        <br /><br />
        <div class="row">
            <br />
            <div class="col-md-3"> <strong>New Password:</strong></div>
            <div class="col-md-5">
                <input id="pass" data-rule-minlength="6" data-msg-minlength="Password should be at least 6 characters" class="password" type="password" name="newpassword" required/>
            </div>
        </div>
        <br /><br />
        <div class="row">
            <br />
            <div class="col-md-3"> <strong>Confirm Password:</strong></div>
            <div class="col-md-5">
                <input class="password" type="password" data-msg-equalTo="Passwords dont match" name="confirmpassword" data-rule-equalTo="#pass" required/>
            </div>
        </div>
    </div>
    <br/><hr/>
    <div class="row">
        <button type="submit" class="btn btn-primary btn-rounded">SUBMIT</button>
    </div>
</form>

@section Scripts{ 
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script>
        $(function () {
            $(".password").width('70%').kendoMaskedTextBox();
        });
    </script>
    
}

