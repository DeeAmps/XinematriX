
@{
    ViewData["Title"] = "Promos";
    ViewData["PageHeading"] = "Deals And Promos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Promo</h2>

<div>
    <div id="form-container" style="position: relative">
        <div id="row">
            <div id="tabs">
                <ul>
                    <li class="k-state-active">Promos(DATE)</li>
                    <li>Promos(DAY)</li>
                </ul>
                <div>
                    <div id="prdate"></div>
                </div>
                <div>
                    <div id="prday"></div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/main/promos.js"></script>
<script id="newDatePromo" type="text/x-kendo-template">
    <br>
    <div>
        <div class="row">
            <div class="col-md-3"> Date For Promo:</div>
            <div class="col-md-7">
                <input id="dateforpromo" />
            </div>
        </div>
        <br /><br />
        <div class="row">
            <br />
            <div class="col-md-2"> Description:</div>
            <div class="col-md-8">
                <textarea id="descriptionpromo" rows="3" cols="2"></textarea>
            </div> 
        </div>
        </div>
        <hr />
        <div class="row col-md-8 dialog_buttons">
            <button type="button" id="confirmDatePromo" class="btn">Add Promo</button>
            &nbsp;
            <button type="button" id="cancel" class="btn" >Cancel</button>
        </div>
    
</script>
<script id="datepromo" type="text/x-kendo-template">
</script>
<script id="daypromo" type="text/x-kendo-template">
</script>
<script id="newDayPromo" type="text/x-kendo-template">
    <br/>
    <div>
        <div class="row">
            <div class="col-md-2"> Day For Promo:</div>
            <div class="col-md-8">
                <input id="dayforpromo" />
            </div>
        </div>
        <br /><br />
        <div class="row">
            <br />
            <div class="col-md-2"> Description:</div>
            <div class="col-md-8">
                <textarea id="ddescriptionpromo" rows="2" cols="2"></textarea>
            </div>
        </div>
    </div>
    <hr />
    <div class="row dialog_buttons">
        <button type="button" id="confirmDayPromo" class="btn">Add Promo</button>
        &nbsp;
        <button type="button" id="cancell" class="btn">Cancel</button>
    </div>
</script>
}