@using Microsoft.Extensions.Options
<!DOCTYPE html>
<html>

<head>

    <!-- Title -->
    <title>XinematriX | Admin</title>

    <meta content="width=device-width, initial-scale=1" name="viewport" />
    <meta charset="UTF-8">
    <meta name="description" content="XinematriX" />
    <meta name="keywords" content="xinematrix" />
    <meta name="author" content="Daniel Bennin" />

    <!-- Styles -->
    <environment include="Development">
        <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,600' rel='stylesheet' type='text/css'>
        <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/white.css" />
        <link rel="stylesheet" href="~/lib/fontawesome/css/font-awesome.min.css" />
        <link rel="stylesheet" href="~/lib/offcanvasmenueffects/css/menu_cornerbox.css" />
        <link rel="stylesheet" href="~/css/modern.min.css" />
        <link href="~/lib/kendo/styles/kendo.common.min.css" rel="stylesheet" />
        <link href="~/lib/kendo/styles/kendo.uniform.min.css" rel="stylesheet" />
    </environment>

    <environment include="Development">
        <script src="~/lib/jquery/jquery-2.1.3.min.js"></script>
        <script src="~/js/utilities.js"></script>
        <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
        <script src="~/lib/jquery-ui/jquery-ui.min.js"></script>
        <script src="~/lib/jquery-slimscroll/jquery.slimscroll.min.js"></script>
        <script src="~/lib/waves/waves.min.js"></script>
        <script src="~/js/modern.min.js"></script>
        <script src="~/lib/kendo/js/kendo.all.min.js"></script>
        <script type="text/javascript">
           var apiUrl = "http://localhost:3079";
        </script>
    </environment>


    <environment exclude="Development">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.min.css" asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>

</head>

<body class="page-header-fixed">
    <div class="overlay"></div>

    <div class="menu-wrap">
        <nav class="profile-menu">
            <div class="profile"><img src="~/images/avatar1.png" width="52" alt="" /></div>

        </nav>
    </div>

    <!-- Search Form -->
    <main class="page-content content-wrap">
        <div class="navbar">
            <div class="navbar-inner">
                <div class="sidebar-pusher">
                    <a href="javascript:void(0);" class="waves-effect waves-button waves-classic push-sidebar">
                        <i class="fa fa-bars"></i>
                    </a>
                </div>
                <div class="logo-box">
                    <a href="#" class="logo-text"><span>XinematriX</span></a>
                </div>
                <!-- Logo Box -->

                <div class="topmenu-outer">
                    <div class="top-menu">
                        <ul class="nav navbar-nav navbar-left">
                            <li>
                                <a href="javascript:void(0);" class="waves-effect waves-button waves-classic toggle-fullscreen"><i class="fa fa-expand"></i></a>
                            </li>

                        </ul>
                        <ul class="nav navbar-nav navbar-right">
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle waves-effect waves-button waves-classic" data-toggle="dropdown">
                                    <span class="user-name">Username<i class="fa fa-angle-down"></i></span>
                                    <img class="img-circle avatar" src="~/images/avatar1.png" width="40" height="40" alt="">
                                </a>
                                <ul class="dropdown-menu dropdown-list" role="menu">
                                    <li role="presentation"><a href="login.html"><i class="fa fa-sign-out m-r-xs"></i>Log out</a></li>
                                </ul>
                            </li>

                        </ul>
                        <!-- Nav -->
                    </div>
                    <!-- Top Menu -->
                </div>
            </div>
        </div>
        <!-- Navbar -->
        <div class="page-sidebar sidebar" style="overflow-y: no-content; position: fixed">
            <div style="height: calc( 100vh - 60px)!important; background: #56baed !important;">
                <div class="sidebar-header">
                    <div class="sidebar-profile">
                        <a href="javascript:void(0);" id="profile-menu-link">
                            <div class="sidebar-profile-image">
                                <img src="~/images/avatar1.png" class="img-circle img-responsive" alt="">
                            </div>
                            <div class="sidebar-profile-details">
                                <span>Admin<br><small style="color: black">Username</small></span>
                            </div>
                        </a>
                    </div>
                </div>
                <ul class="menu accordion-menu">
                        <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")"><a asp-controller="Home" asp-action="Index" class="waves-effect waves-button"><span class="menu-icon glyphicon glyphicon-film"></span><p>ALL MOVIES</p></a></li>
                        <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "AddMovie" ? "active" : "")"><a asp-controller="Home" asp-action="AddMovie" class="waves-effect waves-button"><span class="menu-icon glyphicon glyphicon-plus"></span><p>NEW MOVIE</p></a></li>
                        <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Promo" ? "active" : "")"><a asp-controller="Home" asp-action="Promo" class="waves-effect waves-button"><span class="menu-icon glyphicon glyphicon-gift"></span><p>DEALS &#38; PROMO</p></a></li>
                        <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Polls" ? "active" : "")"><a asp-controller="Home" asp-action="Polls" class="waves-effect waves-button"><span class="menu-icon glyphicon glyphicon-check"></span><p>MOVIE POLLS</p></a></li>
                        <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Profile" ? "active" : "")"><a asp-controller="Home" asp-action="Profile" class="waves-effect waves-button"><span class="menu-icon glyphicon glyphicon-user"></span><p>MANAGE PROFILE</p></a></li> 
                </ul>
            </div>
            <!-- Page Sidebar Inner -->
        </div>
        <!-- Page Sidebar -->
        <div class="page-inner">
            <div class="page-title" style=" padding-left: 30vh;">
                <h3>@ViewData["PageHeading"]</h3>
            </div>
            <div id="main-wrapper" style="position: inherit;padding-left: 30vh;padding-right: 6vh;">
                @RenderBody()
            </div>
            <!-- Main Wrapper -->
            <div class="page-footer" style=" padding-left: 30vh;">
                <p class="no-s">@DateTime.Now.Year &copy; XinematriX by D.Bennin.</p>
            </div>
        </div>
        <!-- Page Inner -->
    </main>
    <!-- Page Content -->

    <div class="cd-overlay"></div>


    <!-- Javascripts -->
    <environment exclude="Development">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js" asp-fallback-src="~/lib/jquery/dist/jquery.min.js" asp-fallback-test="window.jQuery" crossorigin="anonymous" integrity="sha384-K+ctZQ+LL8q6tP7I94W+qzQsfRV2a+AfHIi9k8z8l9ggpc8X+Ytst4yBo/hH+8Fk">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/bootstrap.min.js" asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js" asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal" crossorigin="anonymous" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>
    @RenderSection("Scripts", required: false)
</body>

</html>